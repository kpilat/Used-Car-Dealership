<header class="p-3 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

            <div class="logo-container">
                <a href="/" class="d-flex align-items-center my-2 my-lg-0 text-white text-decoration-none">
                    <i class="fas fa-car car-icon"></i>
                    <h1 class="logo-title">NodeCars</h1>
                </a>
            </div>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 text-secondary">Domov</a></li>
                <li><a href="#" class="nav-link px-2 text-white">Fórum</a></li>
            </ul>

            <div class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 text-center">
                <a href="/#search-filter">
                    <button type="button" class="btn btn-outline-light me-2" onClick="">
                        <i class="fas fa-search"></i>
                        Prejsť na vyhľadávanie
                    </button>
                </a>
            </div>

            <div class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 text-center">
                <a href="/create">
                    <button type="button" class="btn btn-warning">
                        <i class="fas fa-plus"></i>
                        Pridať inzerát
                    </button>
                </a>
            </div>

            <div class="text-end">
                <div class="flex-shrink-0 dropdown">
                    <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                        <% if(user !== "false") {%>
                                <li><a class="dropdown-item" href="/profile?id=<%= user._id %>">Profil</a></li>
                                <li><a class="dropdown-item" href="/userads?id=<%= user._id %>">Moje inzeráty</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout">Odhlásiť</a></li>
                        <% } else { %>
                                <li><a class="dropdown-item" href="/login">Prihlásiť sa</a></li>
                                <li><a class="dropdown-item" href="/register">Zaregistrovať sa</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>