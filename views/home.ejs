

<%- include('partials/header'); -%>


<!--Recommended Ads-->

<%- include('partials/carousel'); -%>


<!--SEARCH FILTER-->

<section id="search-filter">
    <div class="container">
        <div class="row col-lg-12 col-md-12 form-filter-title-container">
            <h2 class="h2-font">Vyberte si prosím z nižšie uvedených kritérií</h2>
        </div>
        <div class="row col-lg-12 col-md-12">
            <form action="/" class="row g-3 form-filter" method="post">
                <div class="col-md-12">

                    <select name="selectedBrand" class="form-select" id="selectedBrand" required="" onchange="getModel()">
                        <option>Značka</option>
                    </select>
                    <input type="hidden" name="listName" id="brandInput" value="">
                    <input type="hidden" name="listName" id="brandOutput" value="<%= brandsAndModels %>">
                </div>
                <div class="col-md-12">
                    <select class="form-select" id="selectedModel">
                        <option value="">Model</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <select class="form-select">
                        <option value="">Rok výroby od</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <select class="form-select">
                        <option value="">Rok výroby do</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <select class="form-select">
                        <option value="">Typ paliva</option>
                    </select>
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Najazdené km od">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Najazdené km do">
                </div>
                <div class="col-md-12">
                    <select class="form-select">
                        <option value="">Typ karosérie</option>
                    </select>
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Výkon od (hp)">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Výkon do (hp)">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Cena od">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Cena do">
                </div>
                <div class="col-12 search-btn">
                    <button type="submit" class="btn btn-lg btn-dark"><i class="fas fa-search" style="padding-right: 8px"></i>Zobraziť výsledky</button>
                </div>

            </form>
        </div>
    </div>
</section>


<%- include('partials/footer'); -%>