

<%- include('partials/header'); -%>


<!--Recommended Ads-->

<%- include('partials/carousel'); -%>


<!--SEARCH FILTER-->

<section id="search-filter">
    <div class="container">
        <div class="row col-lg-12 col-md-12 form-filter-title-container">
            <h2 class="h2-font">Vyberte si prosím z nižšie uvedených kritérií</h2>
        </div>
        <div class="row col-lg-12 col-md-12">
            <form action="/?sort=priceu&count=15" class="row g-3 form-filter" method="post">
                <div class="col-md-12">

                    <select name="selectedBrand" class="form-select" id="selectedBrand" required="" onchange="getModel()">
                        <option value="">Značka</option>
                    </select>
                    <input type="hidden" name="brandInput" id="brandInput" value="">
                    <input type="hidden" id="brandOutput" value="<%= brandsAndModels %>">
                </div>
                <div class="col-md-12">
                    <select class="form-select" id="selectedModel">
                        <option value="">Model</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <select class="form-select year-own" id="selectedYearFrom">
                        <option value="">Rok výroby do</option>
                        <% years.forEach(function(item){ %>
                            <option> <%= item %> </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-6">
                    <select class="form-select year-own" id="selectedYearTo">
                        <option value="">Rok výroby do</option>
                        <% years.forEach(function(item){ %>
                            <option> <%= item %> </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-12">
                    <select class="form-select" id="selectedFuel">
                        <option value="">Typ paliva</option>
                        <% fuelType.forEach(function(item){ %>
                            <option> <%= item %> </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Najazdené km od" id="selectedKmFrom">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Najazdené km do" id="selectedKmTo">
                </div>
                <div class="col-md-12">
                    <select class="form-select" id="selectedBodyType">
                        <option value="">Typ karosérie</option>
                        <% vehicleType.forEach(function(item){ %>
                            <option> <%= item %> </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-12">
                    <select class="form-select" id="selectedGearbox">
                        <option value="">Prevodovka</option>
                        <% gearbox.forEach(function(item){ %>
                            <option> <%= item %> </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Výkon od (hp)" id="powerFrom">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Výkon do (hp)" id="powerTo">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Cena od" id="PriceFrom">
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" placeholder="Cena do" id="PriceTo">
                </div>
                <div class="col-12 search-btn">
                    <button type="submit" class="btn btn-lg btn-dark" onclick="gatherValues()"><i class="fas fa-search" style="padding-right: 8px"></i>Zobraziť výsledky</button>
                </div>

            </form>
        </div>
    </div>
</section>


<%- include('partials/footer'); -%>