<%- include('partials/header'); -%>

<div class="card flex-md-row mb-4 box-shadow h-md-250 results-optionbar">
    <div class="card-body row text-start">
        <div class="col-md-2">
            <label for="sort-option" class="form-label note-font">Zoradiť podľa...</label>
            <select name="" id="sort-option" class="form-select results-option" onChange="ResultOptionsChange('1')">
                <% sort.forEach(function(item){ %>
                    <option value=" <%= item.value %> "> <%= item.display %> </option>
                <% }) %>
            </select>
        </div>
        <div class="col-md-2">
            <label for="count-option" class="form-label note-font">Počet výsledkov</label>
            <select name="" id="count-option" class="form-select results-option" onChange="ResultOptionsChange('1')">
                <% count.forEach(function(item){ %>
                    <option> <%= item %> </option>
                <% }) %>
            </select>
        </div>
        <div class="col-md-8 text-end">
            <a href="/?recover=1">
                <button type="button" class="btn btn-outline-dark modify-filter-btn button-font">Upraviť vyhľadávanie</button>
            </a>
        </div>
    </div>
</div>

<div class="row mb-1 results-container">
    <% if(carList !== undefined){ %>
        <% carList.forEach(function(item){ %>
            <div class="card flex-md-row mb-4 box-shadow h-md-250 result-card">


                    <div class="card-body d-flex flex-column">
                        <div class="row mb-1">
                            <div class="col-md-3 col-sm-12">
                                <h1 class="mb-0 h1-font brand-and-model">
                                    <img class="card-img-right card-thumbnail" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22200%22%20height%3D%22250%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20200%20250%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_17918202da8%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A13pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_17918202da8%22%3E%3Crect%20width%3D%22200%22%20height%3D%22250%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2256.1953125%22%20y%3D%22130.7%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                                </h1>
                            </div>
                            <div class="col-md-9">
                                <div class="container row">
                                    <div class="col-md-6">
                                        <h1 class="mb-0 h1-font brand-and-model">
                                            <%= item.brand + " " + item.model %>
                                        </h1>
                                    </div>
                                    <div class="col-md-6  text-end">
                                        <h2 class="mb-1">
                                            <%= item.price %>€
                                        </h2>
                                    </div>
                                </div>

                                <div class="container row">
                                    <div class="row mb-1 card-icons">
                                        <div class="col-md-2 col-sm-12 text-center icon-font">
                                            <p class="mb-0 ">
                                                <i class="fas fa-road"></i>
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center icon-font">
                                            <p class="mb-0 ">
                                                <i class="far fa-calendar-alt"></i>
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center icon-font">
                                            <p class="mb-1">
                                                <i class="fas fa-tachometer-alt"></i>
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center icon-font">
                                            <p class="mb-0 ">
                                                <i class="fas fa-cogs"></i>
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center icon-font">
                                            <p class="mb-0 ">
                                                <i class="fas fa-gas-pump"></i>
                                            </p>
                                        </div>
                                    </div>



                                    <div class="row mb-1 icon-description">
                                        <div class="col-md-2 col-sm-12 text-center">
                                            <p class="mb-0 icon-description-font">
                                                <%= item.kilometer %>
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center">
                                            <p class="mb-0 icon-description-font">
                                                <%= item.firstRegistration %>
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center">
                                            <p class="mb-0 icon-description-font">
                                                <%= item.powerPS %>HP
                                            </p>
                                        </div>
                                        <div class="col-md-2 col-sm-12  text-center">
                                            <p class="mb-0 icon-description-font">
                                                <%= item.gearbox %>
                                            </p>
                                        </div>
                                        <div class="col-md-2  col-sm-12 text-center">
                                            <p class="mb-0 icon-description-font">
                                                <%= item.fuelType %>
                                            </p>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                        <a href="/results/ad<%= item._id %>" class="card-link"></a>
                    </div>
            </div>
        <% }) %>
    <% } else {%>

        <h1 class="h1-font text-center">Nepodarilo sa nájsť žiadne vozidlo.</h1>

    <% } %>
</div>

<div class="card flex-md-row mb-4 box-shadow h-md-250 pagination-bar">
    <div class="col-md-12">
    <nav aria-label="Page navigation example" class="pagination-container">
        <ul class="pagination justify-content-center">
            <li class="page-item <%= pagination.disabledLeft %>">
                <a class="page-link pagination-btn" onclick="ResultOptionsChange( <%= pagination.currentPage - 1 %> )" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <% pagination.pageNumbers.forEach(function(number){ %>

                <li class="page-item"><a class="page-link pagination-btn <% if(number === pagination.currentPage){ %>
                                                                                    <%= "pagination-btn-active" %>
                                                                          <% } %>
                    " onclick="ResultOptionsChange( <%= number %> )" href="#"> <%= number %> </a></li>
            <% }) %>
            <li class="page-item <%= pagination.disabledRight %>">
                <a class="page-link pagination-btn" onclick="ResultOptionsChange( <%= pagination.currentPage + 1 %> )" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    </div>
</div>

<%- include('partials/footer'); -%>